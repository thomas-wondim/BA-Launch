# Deploy plain static site (no build) to Azure Static Web Apps
# Adjust app_location and output_location if your files live in a subfolder.
on:
  push:
    branches:
      - main

jobs:
  build_and_deploy:
    runs-on: ubuntu-latest
    name: Build and Deploy to Azure Static Web Apps
    steps:
      - uses: actions/checkout@v4

      # No build steps required because this is a static HTML + Tailwind site (prebuilt).
      # If you later add a build step, add actions/setup-node + npm ci + npm run build
      # and change output_location to your build output (e.g., "dist").

      - name: Deploy to Azure Static Web Apps
        uses: Azure/static-web-apps-deploy@v1
        with:
          azure_static_web_apps_api_token: ${{ secrets.AZURE_STATIC_WEB_APPS_API_TOKEN }}
          repo_token: ${{ secrets.GITHUB_TOKEN }}
          action: "upload"
          app_location: "/"          # repo root (change if site files are in a subfolder)
          api_location: ""           # no Azure Functions
          output_location: "/"       # static files in repo root (or set to 'dist' if you build)
